{
  "manifest_version": 3,
  "name": "PESUmate",
  "version": "2.0.0",
  "description": "Download slides & chat with your course content â€” powered by AI.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.pesuacademy.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pesuacademy.com/Academy/*"
      ],
      "js": [
        "src/scripts/bridge.js"
      ],
      "run_at": "document_idle",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "https://www.pesuacademy.com/Academy/*"
      ],
      "js": [
        "lib/pdf-lib.min.js",
        "lib/jszip.min.js",
        "lib/pptx-to-html.browser.js",
        "src/scripts/prompt.js",
        "src/scripts/content.js",
        "src/scripts/chat.js"
      ],
      "css": [
        "src/styles/panel.css",
        "src/styles/chat.css"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "src/pages/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*",
        "icon.png"
      ],
      "matches": [
        "https://www.pesuacademy.com/*"
      ]
    }
  ]
}